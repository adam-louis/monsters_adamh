{
  "version": 2,
  "framework": null,
  "rewrites": [
    { "source": "/game", "destination": "/game.html" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    },
    {
      "source": "/styles.css",
      "headers": [
        {
          "key": "Content-Type", 
          "value": "text/css"
        }
      ]
    }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "/public/$1" }
  ]
}
